<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetsMatchingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_pewter_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_color</item>
        <!-- Customize your theme here. -->

        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="big_button" parent="Widget.AppCompat.Button">
        <item name="android:color">@color/grey_light</item>
        <item name="android:textSize">99sp</item>
    </style>

    <style name="other" parent="big_button">
        <item name="android:background">@drawable/chat_edit_background</item>
        <item name="android:color">@color/pewter_blue</item>
    </style>
</resources>