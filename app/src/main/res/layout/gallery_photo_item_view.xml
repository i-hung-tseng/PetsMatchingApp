<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_gallery_image"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="100dp"
        android:src="@drawable/icon_dog"/>

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_gallery_image"
        app:layout_constraintRight_toRightOf="@id/iv_gallery_image"
        android:src="@drawable/ic_baseline_circle_transport"
        android:paddingRight="2dp"
        android:paddingTop="2dp"/>

    <ImageView
        android:id="@+id/iv_selected_photo"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="100dp"
        android:visibility="gone"
        android:background="@color/gallery_selected_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
